{
	"name": "auth",
	"version": "1.0.0",
	"private": "true",
	"type": "module",
	"scripts": {
		"start": "node --env-file=.env dist/server.js",
		"build": "tsup",
		"dev": "tsup --watch --onSuccess \"node --env-file=.env dist/server.js\"",
		"type-check": "tsc --noEmit",
		"clean": "rm -rf dist",
		"check": "pnpm exec biome check --write",
		"lint": "pnpm exec biome lint --write",
		"format": "pnpm exec biome format --write",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:push": "drizzle-kit push"
	},
	"packageManager": "pnpm@10.14.0",
	"devDependencies": {
		"@types/cookie-parser": "^1.4.10",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.6",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/morgan": "^1.9.10",
		"@types/node": "^25.0.1",
		"@types/pg": "^8.16.0",
		"drizzle-kit": "^0.31.8",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@chat-app/logger": "workspace:*",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"drizzle-orm": "^0.45.1",
		"express": "^5.2.1",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.3",
		"morgan": "^1.10.1",
		"pg": "^8.16.3",
		"zod": "^4.1.13"
	}
}
